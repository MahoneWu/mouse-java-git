<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="steelAxe" class="com.mouse.spring.BeanPostProcessorDemo.SteelAxe" scope="prototype"/>

    <bean id="american" class="com.mouse.spring.BeanPostProcessorDemo.American" init-method="init">
        <property name="axe" ref="steelAxe" />
        <property name="name" value="依赖注入的值"/>
    </bean>
    <!--配置bean后处理器 -->
    <bean id="beanPostProcessor" class="com.mouse.spring.BeanPostProcessorDemo.MyBeanPostProcessor" />
</beans>